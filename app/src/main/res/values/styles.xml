<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--  Common Widgets Styles  -->

    <!-- DayItemView -->
    <style name="DayItemViewStyle" parent="CardView.Light">
        <item name="dayItemDateNumberColor">@color/timetableColor_accent_primary</item>
        <item name="dayItemDayOfWeekColor">@color/timetableColor_accent_primary</item>
    </style>

    <!-- SubjectView -->
    <style name="SubjectViewStyle" parent="CardView.Light">
        <item name="subjectViewBackgroundLectureColor">@color/subjectColor_lecture</item>
        <item name="subjectViewBackgroundSeminarColor">@color/subjectColor_seminar</item>
        <item name="subjectViewTextColor">@color/timetableColor_accent_primary</item>
    </style>

    <style name="TimeLineViewStyle" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="timeLineViewAccentColor">@color/timeLineColor_accent</item>
        <item name="timeLineViewBaseColor">@color/timeLineColor_base</item>
    </style>

    <style name="NextFloatingButtonStyle">
        <item name="android:background">@drawable/next_button_background</item>
    </style>

    <style name="PrevFloatingButtonStyle">
        <item name="android:background">@drawable/next_button_background</item>
        <item name="android:rotation">180</item>
    </style>

    <style name="TextStyle.Time" parent="TextStyle.Body.Medium">
        <item name="android:textColor">@color/timetableColor_primary</item>
    </style>

    <style name="TextStyle.Month" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="TextStyle.Body" parent="TextAppearance.AppCompat.Medium">
        <item name="fontFamily">PT Sans</item>
    </style>

    <style name="TextStyle.Body.Medium" parent="TextStyle.Body">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxWidth">150dp</item>
    </style>

    <style name="TextStyle.Body.BoldSubtitle" parent="TextStyle.Body">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle.Body.BoldTitle" parent="TextStyle.Body">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle.Body.Header" parent="TextStyle.Body">
        <item name="android:text">48sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="TextStyle.Body.Small" parent="TextStyle.Body">
        <item name="android:text">12sp</item>
        <item name="android:color">@color/white</item>
    </style>

    <style name="TextStyle.Body.SmallMain" parent="TextStyle.Body">
        <item name="android:text">18sp</item>
        <item name="android:color">@color/white</item>
    </style>

    <style name="TopSheet" parent="Theme.Design.BottomSheetDialog">
    </style>
    
    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/top_slideable_menu_background</item>
    </style>

    <style name="TopSheet_DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/top_sheet_dialog_to_bottom</item>
        <item name="android:windowExitAnimation">@anim/top_sheet_dialog_to_top</item>
    </style>

    <style name="Button.MainScreenMenu" parent="Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/TextStyle.Body.BoldTitle</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">end|center</item>
    </style>
</resources>