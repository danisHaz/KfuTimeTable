<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KfuTimeTable" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseStyle" parent="Theme.KfuTimeTable">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>

        <item name="topSheetStyle">@style/CustomBottomSheetStyle</item>

        <item name="dayItemDateNumberColor">@color/timetableColor_accent_primary</item>
        <item name="dayItemDayOfWeekColor">@color/timetableColor_accent_primary</item>
        <item name="subjectViewBackgroundLectureColor">@color/subjectColor_lecture</item>
        <item name="subjectViewBackgroundSeminarColor">@color/subjectColor_seminar</item>
        <item name="dayItemViewBackgroundCheckedColor">@color/dayItemViewColor_checked</item>
        <item name="dayItemViewBackgroundBaseColor">?attr/colorPrimary</item>
        <item name="subjectViewTextColor">@color/timetableColor_accent_primary</item>
        <item name="timeLineViewAccentColor">@color/timeLineColor_accent</item>
        <item name="timeLineViewBaseColor">@color/timeLineColor_base</item>

        <item name="colorDarkBlue">#004F8C</item>
        <item name="colorWhite">#FFF</item>
        <item name="colorBlack">#000</item>
        <item name="colorGray">#B0B0B0</item>
        <item name="colorGreen">#18D008</item>
        <item name="colorBlue">#2F88FF</item>
    </style>

</resources>